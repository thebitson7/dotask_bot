# الزامی: توکن واقعی ربات‌ات را جایگزین کن
BOT_TOKEN=8353271763:AAHPQhcSZLDhP5n_NW9XpU7J0gvEmhSQwvU


# --- Mode ---
ENV=development
# DEBUG را اگر ندهی از ENV استنتاج می‌شود (production => False, غیر از آن => True)
# DEBUG=true
# LOG_LEVEL را فقط اگر خواستی override کنی تنظیم کن: CRITICAL|ERROR|WARNING|INFO|DEBUG|NOTSET
# LOG_LEVEL=DEBUG

# --- Database ---
# SQLite محلی (مسیر نسبی به ریشهٔ پروژه؛ اسلش رو به جلو روی ویندوز هم OK است)
DB_URL=sqlite+aiosqlite:///db.sqlite3
DB_ECHO=false
DB_POOL_SIZE=10
DB_POOL_TIMEOUT=30

# (اختیاری) Redis برای FSM/کش؛ اگر نخواستی خالی بگذار یا کامنت کن
# REDIS_URL=redis://localhost:6379/0

# --- Webhook (اختیاری) ---
WEBHOOK_MODE=false
# اگر WEBHOOK_MODE=true شد، DOMAIN را الزاما بده (بدون اسلش پایانی)
# WEBHOOK_DOMAIN=bot.example.com
WEBHOOK_SCHEME=https
WEBHOOK_PATH=/telegram/webhook
# WEBHOOK_SECRET=your-opaque-secret

# --- Server (for webhook) ---
HOST=0.0.0.0
PORT=8080

# --- i18n / Time ---
DEFAULT_LANG=fa
TZ=Asia/Tehran
# 👇 حتماً JSON آرایه‌ای باشد (نه fa,en):
SUPPORTED_LOCALES=["fa","en"]
LOCALE_FALLBACKS=["en"]

# --- Observability (اختیاری) ---
# SENTRY_DSN=https://<key>@oXXXX.ingest.sentry.io/XXXX

# --- Rate limit (مثال) ---
RATE_LIMIT_GLOBAL_PER_MIN=900
RATE_LIMIT_PER_CHAT_PER_MIN=60
